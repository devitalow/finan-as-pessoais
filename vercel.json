{
    "version": 2,
    "builds": [
        {
            "src": "financas_app/wsgi.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1"
        },
        {
            "src": "/(.*)",
            "dest": "financas_app/wsgi.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "financas_app.settings",
        "ALLOWED_HOSTS": ".vercel.app",
        "DEBUG": "False"
    }
} 